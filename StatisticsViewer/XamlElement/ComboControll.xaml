<UserControl x:Class="StatisticsViewer.XamlElement.ComboControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StatisticsViewer.XamlElement"
             mc:Ignorable="d" >
    <Grid>
        <ComboBox Name="FilterBox" Style="{StaticResource ComboBoxFlatStyle}">
            <ComboBoxItem Content="AND" IsSelected="True"/>
            <ComboBoxItem Content="OR"/>
        </ComboBox>
    </Grid>
</UserControl>
