<Window x:Class="StatisticsViewer.XamlElement.AddConditionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatisticsViewer"
        mc:Ignorable="d"
        Title="Введите выражение" Height="150" Width="540" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid Style="{StaticResource GridContainer}">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" Content="Имя группы"/>
            <ComboBox Grid.Column="0" Grid.Row="1" IsEditable="True" IsReadOnly="True" Name ="FieldName" SelectionChanged="FieldName_SelectionChanged" Text="Выберите имя..."/>
            <Label Grid.Column="1" Grid.Row="0" Content="Знак"/>
            <ComboBox Grid.Column="1" Grid.Row="1" Name ="TypeComparison" SelectionChanged="TypeComparison_OnSelectionChanged">
                <ComboBoxItem Content="=" IsSelected="True"/>
                <ComboBoxItem Content="!="/>
                <ComboBoxItem Content="&lt;"/>
                <ComboBoxItem Content="&gt;" />
            </ComboBox>
            <Label Grid.Column="2" Grid.Row="0" Content="Значение"/>
            <ComboBox Grid.Column="2" Grid.Row="1" IsEditable="True"  Name ="FieldText" SelectionChanged="FieldText_OnSelectionChanged" Text="Введите значение..."/>
        </Grid>
        <DockPanel Grid.Row="1" HorizontalAlignment="Right">
            <Label Name="LoadField" VerticalAlignment="Center" Content="загрузка значений полей...." Visibility="Hidden"/>
            <Button Name ="Cancel" Click="Cancel_OnClick"  Content="Отмена"/>
            <Button Name="Ok" Click="OkButton_OnClick" Content="ОК"/>
        </DockPanel>
    </Grid>
</Window>
