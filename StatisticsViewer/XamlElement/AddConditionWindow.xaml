<Window x:Class="StatisticsViewer.XamlElement.AddConditionWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StatisticsViewer.XamlElement"
      HorizontalAlignment="Center"
      VerticalAlignment="Center"
      Title="AddConditionWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel>
            <StackPanel>
                <Label>Имя поля</Label>
                <ComboBox  Name ="FieldName" SelectionChanged="FieldName_SelectionChanged"></ComboBox>
            </StackPanel>
            <StackPanel>
                <Label>Тип сравнения</Label>
                <ComboBox Name ="TypeComparison" SelectionChanged="TypeComparison_OnSelectionChanged"></ComboBox>
            </StackPanel>
            <StackPanel>
                <Label>Значение поля</Label>
                <ComboBox Name ="FieldText" SelectionChanged="FieldText_OnSelectionChanged" IsEditable="True"></ComboBox>
            </StackPanel>
            <Button Name="OkButton" Click="OkButton_OnClick">Ок</Button>
        </WrapPanel>
    </Grid>
</Window>
